
.container {
  padding: 20px;
}
.header {
  margin-bottom: 20px;
}
.question-content {
  margin-bottom: 20px;
}
.option {
  margin: 10px 0;
}
.option-box {
  display: flex;
  align-items: center;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  cursor: pointer;
}
.option-frame {
  display: flex;
  align-items: center;
}
.option-text {
  margin-left: 10px;
}
.selected {
  font-weight: bold;
}
.selected-option {
  background-color: #e0f7e9; /* Light green to indicate the selected option */
}
.correct {
  color: green;
}
.incorrect {
  color: red;
}
.navigation-buttons {
  margin-top: 20px;
}
.nav-btn {
  margin-right: 10px;
}
.favorite-btn {
  background-color: lightgray;
}
.favorited {
  background-color: yellow;
}
